# Backend Environment Variables Template
# Copy this file to .env and fill in your values

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_database_password
DB_NAME=next_level_games
DB_PORT=3306

# JWT Configuration
JWT_SECRET=your_super_secure_random_jwt_secret_key_here
JWT_EXPIRE=7d

# Admin Credentials (used for initial setup)
ADMIN_USERNAME=youradmin
ADMIN_PASSWORD=your_secure_admin_password
ADMIN_EMAIL=admin@yourdomain.com

# Server Configuration
PORT=5000
CORS_ORIGIN=http://localhost:3000,http://localhost:4000

# For Production, replace with your actual domains:
# CORS_ORIGIN=https://yourfrontend.vercel.app,https://youradmin.vercel.app
